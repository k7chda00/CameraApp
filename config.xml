<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.CameraAppV12" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CameraApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-camera" spec="^4.0.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Aplicaion would take photos and then show them to user in thumbnail" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="School project" />
        <variable name="NSLOCATIONWHENINUSEUSAGEDESCRIPTION" value="location used" />
        <variable name="NSPHOTOLIBRARYADDUSAGEDESCRIPTION" value="this is also used" />
    </plugin>
    <plugin name="cordova-plugin-ios-camera-permissions" spec="^1.2.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="your usage message" />
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="your microphone usage message here" />
        <variable name="PHOTOLIBRARY_ADD_USAGE_DESCRIPTION" value="your photo library usage message here" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="your photo library usage message here" />
    </plugin>
    <engine name="ios" spec="^4.5.4" />
</widget>
